<Window x:Class="Validation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Validation"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <StackPanel>
        <TextBlock Text="Механизмы валидации"
                       HorizontalAlignment="Center"
                       FontSize="20"/>
        <Button Content="Валидация в обработчике"
                    Margin="0, 20, 0, 0"
                Click="GoToSimpleValidationWindow"/>
        <Button Content="Реализация ValidationRule"
                Margin="0, 20, 0, 0"
                Click="GoToValidationRuleWindow"/>
        <Button Content="Реализация IDataErrorInfo"
                Margin="0, 20, 0, 0"
                Click="GoToIDataErrorWindow"/>
        <Button Content="Валидация через DbContext"
                Margin="0, 20, 0, 0"/>
    </StackPanel>
</Window>
